<h1><%= @restaurant.name %></h1>



<p><%= @restaurant.address %></p>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.phone_number %></p>
<p style="strong"><%= @restaurant.address %></p>


<h3>Restaurant reviews :</h3>
  <% @restaurant.reviews.each do |review|%>
     <p>
       <%=review.content%> :
        <%=review.rating%>
     </p>
  <% end %>
  <ul class="list-inline">
    <li>
      <%= link_to "Retour aux restos", restaurants_path %>
    </li>
    <li>
      <%= link_to "Create a new review", new_restaurant_review_path(@restaurant) %>
    </li>
    <li>
      <%= link_to "Delete a review", new_restaurant_review_path(@restaurant) %>
    </li>
  </ul>

